                    data: {
                        labels: arrayProductos.map((producto, index) => `${producto}: ${arrayPorcentajes[index]}%`),
                        datasets: [{
                            data: arrayCantidad,
                            backgroundColor: backgroundColors,
                        }],
                    },
                    options: {
                        legend: {
                            labels: {
                                fontSize: 18, // Tamaño de fuente de las etiquetas del legendario
                            }
                        }
                    }
                });
            },
            error: function(error) {
                console.log(error);
            }
