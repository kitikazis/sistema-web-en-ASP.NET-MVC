            contentType: "application/json; charset=utf-8",
            success: function(data) {
                var arrayProductos = [];
                var arrayCantidad = [];

                for (var i = 0; i < data.length; i++) {
                    arrayProductos.push(data[i].producto);
                    arrayCantidad.push(data[i].cantidad);
                }

                var totalCantidad = arrayCantidad.reduce((a, b) => a + b, 0); // Calcula el total de cantidad

                // Calcula los porcentajes
                var arrayPorcentajes = arrayCantidad.map(cantidad => ((cantidad / totalCantidad) * 100).toFixed(2));

                // Genera los colores dinámicamente con el porcentaje
                var backgroundColors = arrayPorcentajes.map((porcentaje, index) => {
                    var hue = (index * 137.508) % 360; // Elige un matiz diferente para cada categoría
                    return `hsl(${hue}, 70%, 50%)`; // Convierte el matiz a un color HSL
                });

