@{
    ViewBag.Title = "Marca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Mantemiento</a></li>
    <li class="breadcrumb-item active">Marca</li> 
</ol>

<div class="card">
    <h5 class="card-header">
        <i class="fas fa-users me-1"></i> Lista de Marca
    </h5>
    <div class="card-body">
        <div class="row">
            <div class="col-12">

                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear nuevo</button>
            </div>
        </div>
        <hr />
        <table id="tabla" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Descripcion</th>

                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal INCIO-->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Marca</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body ">
                <!-- ID-->
                <input id="txtid" type="text" value="0" />
                <div class="row g-2">



                    <div class="col-sm-6">
                        <label for="txtdescripcion" class="form-label">Descripcion</label>
                        <input type="text" class="form-control" id="txtdescripcion" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="cboactivo" class="form-label">Activo</label>
                        <select id="cboactivo" class="form-select">
                            <option selected></option>
                            <option value="1">Si</option>
                            <option value="0">No</option>

                        </select>
                    </div>
                    <!-- ALETRAS-->
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">       cambios dankger</div>

                    </div>

                </div>



            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal FIN -->
@section scripts {

    <script>

        var tabladata;
        var filaSeleccionada;

            tabladata = $("#tabla").DataTable({
                responsive: true,
                ordering: false,
                //ajax
                "ajax": {
                    //Marca - conentedor
                    url: '@Url.Action("ListarMarca", "Mantenedor")',
                    type: "GET",
                    dataType: "json"
                },
                "columns": [

                    { "data": "Descripcion" },
                    {
                        "data": "Activo",
                        "render": function (valor) {
                            return valor ? '<span class="badge bg-success">SI</span>' : '<span class="badge bg-danger">No</span>';
                        }
                    },
                    {
                        "defaultContent": ' <button type="button" class="btn btn-primary btn-sm btn-editar"> <i class="fas fa-pen"></i></button>' +
                            ' <button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                        "orderable": false,
                        "searchable": false,
                        "width": "90px"
                    }
                ],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/2.0.7/i18n/es-MX.json"
                }
            });

        function abrirModal(json) {
            $("#txtid").val(0);
 $("#txtdescripcion").val(1);
  $("#mensajeError").hide();
 if (json != null) {
                $("#txtid").val(json.IDMarca);

                $("#txtdescripcion").val(json.Descripcion);
                $("#cboactivo").val(json.Activo == true ? 1 : 0);
            }
            $("#FormModal").modal("show");
        }
        //Modal Editar Marca
        $('#tabla tbody').on("click", '.btn-editar', function () {
            filaSeleccionada = $(this).closest("tr");
            var data = tabladata.row(filaSeleccionada).data();
            //carga btn editar

            abrirModal(data)
        })

        //Modal Borrar
        $('#tabla tbody').on("click", '.btn-eliminar', function () {
            var marcaSeleccionada = $(this).closest("tr");
            var data = tabladata.row(marcaSeleccionada).data();
            //carga btn eliminar
            swal({
                //configuraciones de alertas btn eliminar
                title: "¿Estas Seguro?",
                text: "¿Desea eliminar el Marca?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "Si",
                cancelButtonText: "No",
                closeOnConfirm: true
            },

            //POST
                function () {
                    jQuery.ajax({
                        url: '@Url.Action("EliminarMarca", "Mantenedor")',
                        type: "POST",
                        data: JSON.stringify({ id: data.IDMarca }),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {

                         
                            if (data.resultado) {
                                tabladata.row(marcaSeleccionada).remove().draw();
                            } else {
     swal("No se puede eliminar pe mano", data.mensaje, "error pe cause")
                            }
                        },
                        error: function (error) {
                            console.log(error)
                        }
});
              });

            console.log(data);
})



        function Guardar() {
            var Marca = {
                IDMarca: $("#txtid").val(),
                Descripcion: $("#txtdescripcion").val(),
                Activo: $("#cboactivo").val() == 1 ? true : false,
            }
            //jQuery ajax
            jQuery.ajax({
                url: '@Url.Action("GuardaMarca", "Mantenedor")',
                type: "POST",
                data: JSON.stringify({ objeto: Marca }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $(".modal-body").LoadingOverlay("hide");

                    //Marca nuevo
                    if (Marca.IDMarca == 0) {
                        if (data.IDMarca != 0) {
                            Marca.IDMarca = data.resultado
                            tabladata.row.add(Marca).draw(false);
                            $("#FormModal").modal("hide")
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }

                    //Marca Editar

                    else {
                        if (data.resultado) {
                            tabladata.row(filaSeleccionada).data(Marca).draw(false);
                            filaSeleccionada = null;
                            $("#FormModal").modal("hide");

                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }

                },
                //error function
                error: function (error) {
                    $(".modal-body").LoadingOverlay("hide");
                    $("#mensajeError").text("Error Ajax");
                    $("#mensajeError").show();
                },
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show"), {

                        imageRisezeFactor: 2,
                        text: "Cargando.....",
                        size: 14
                    }
                }

                //liberia alertas https://lipis.github.io/bootstrap-sweetalert/
                ///Funcion de Borrar
                //Usuario installar en el Nuget -> sweetalret.boostsrap








                });
        }
    </script>
}